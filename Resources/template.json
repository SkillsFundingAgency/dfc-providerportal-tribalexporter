{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "functionAppPrefix": {
      "type": "string",
      "metadata": {
        "description": "Prefix for the function app resources, in the form dfc-env-proj-fnapp"
      }
    },
    "appServicePlanName": {
      "type": "string",
      "metadata": {
        "description": "App service plan to run the function app under"
      }
    },
    "appServicePlanResourceGroup": {
      "type": "string",
      "metadata": {
        "description": "Resource group the app service plan is in"
      }
    },
    "storageAccountName": {
      "type": "string",
      "metadata": {
        "description": "Shared storage account name"
      }
    },
    "storageAccountResourceGroup": {
      "type": "string",
      "metadata": {
        "description": "Shared storage account resource group"
      }
    },
    "storageConnectionString": {
      "type": "securestring",
      "metadata": {
        "description": "Connection string for the shared storage account"
      }
    }
  },
  "variables": {
    "deploymentUrlBase": "https://raw.githubusercontent.com/SkillsFundingAgency/dfc-devops/master/ArmTemplates/",
    "functionAppName": "[concat(parameters('functionAppPrefix'),'-fa')]",
    "appInsightName": "[concat(parameters('functionAppPrefix'),'-ai')]"
  },
  "resources": [
    {
      "apiVersion": "2017-05-10",
      "name": "tribexpContainer",
      "type": "Microsoft.Resources/deployments",
      "resourceGroup": "[parameters('storageAccountResourceGroup')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('deploymentUrlBase'),'Storage/storage-account-arm-container.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "storageAccountName": {
            "value": "[parameters('storageAccountName')]"
          },
          "storageContainerName": {
            "value": "tribalexporter"
          },
          "publicAccess": {
            "value": "None"
          }
        }
      }
    },
    {
      "apiVersion": "2017-05-10",
      "name": "tribexpAppInsights",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('deploymentUrlBase'),'application-insights.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "appInsightsName": {
            "value": "[variables('appInsightName')]"
          },
          "attachedService": {
            "value": "[variables('functionAppName')]"
          }
        }
      }
    },
    {
      "apiVersion": "2017-05-10",
      "name": "tribexpAppService",
      "type": "Microsoft.Resources/deployments",
      "dependsOn": [
        "tribexpAppInsights"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('deploymentUrlBase'),'app-service.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "appServiceName": {
            "value": "[variables('functionAppName')]"
          },
          "appServicePlanName": {
            "value": "[parameters('appServicePlanName')]"
          },
          "appServicePlanResourceGroup": {
            "value": "[parameters('appServicePlanResourceGroup')]"
          },
          "appServiceType": {
            "value": "functionapp"
          },
          "appServiceAppSettings": {
            "value": [
              {
                "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                "value": "[reference('tribexpAppInsights').outputs.InstrumentationKey.value]"
              },
              {
                "name": "FUNCTIONS_EXTENSION_VERSION",
                "value": "~2"
              },
              {
                "name": "AzureWebJobsStorage",
                "value": "[parameters('storageConnectionString')]"
              }
            ]
          },
          "deployStagingSlot": {
            "value": false
          }
        }
      }
    }
  ],
  "outputs": {
    "functionAppName": {
      "type": "string",
      "value": "[variables('functionAppName')]"
    },
    "appInsightName": {
      "type": "string",
      "value": "[variables('appInsightName')]"
    },
    "appInsightInstrumentationKey": {
      "type": "string",
      "value": "[reference('tribexpAppInsights').outputs.InstrumentationKey.value]"
    }
  }
}